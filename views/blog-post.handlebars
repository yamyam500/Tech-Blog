div class="blog-post-wrapper">
  <div class="blog-post-header">
    <h1>{{post.title}}</h1>
    <h4>{{post.user.username}}</h4>
    <h6>{{post.date_created}}</h6>
  </div>

  <div class="blog-content">
    <p>{{post.content}}</p>
  </div>

  <div class="blog-comments">
    <div class="comments-header">
      <h3>Comments</h3>
      <button class="form-button" id="add-comment-button" value="{{post.id}}">Add a comment</button>
    </div>
    {{#each comments}}
    <div class="comment-div">
      <h4>{{user.username}} ({{date_created}})</h4>
      <p>{{content}}</p>
    </div>
    {{/each}}
  </div>
</div>